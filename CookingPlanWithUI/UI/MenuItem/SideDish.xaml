<UserControl x:Class="CookingPlanWithUI.UI.Menu_Item.SideDish"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CookingPlanWithUI.UI.Menu_Item"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition  Height="60"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="WhiteSmoke" >
            <Label FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="326,4,299,14" Width="175">Side Dish List</Label>
        </Grid>
        <Grid Grid.Row="1">
            <TextBox Name="btnSearch" Margin="25,0,0,0" HorizontalAlignment="Left" Width="200" Height="30"/>
            <Button Name="btnAdd" Width="100" HorizontalAlignment="Right" Margin="0,12,10,8" Height="30"  Content="Add" Background="Green" Foreground="White" Click="btnAdd_Click"/>
        </Grid>
        <Grid Grid.Row="2" Margin="20">
            <DataGrid Name="sideDishDataGrid" IsReadOnly="True" Grid.Row="1" AutoGenerateColumns="False" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#"  Width="40"/>
                    <DataGridTextColumn Header="Category" Width="100"  />
                    <DataGridTextColumn Header="Name" Width="150" />
                    <DataGridTextColumn Header="Taste" Width="50" />
                    <DataGridTextColumn Header="Description" Width="150"/>
                    <DataGridTextColumn Header="Created at" Width="140"/>
                    <DataGridTemplateColumn Header="Action" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="60" />
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0"
                                                Margin="5"
                                                BorderBrush="#46FF05"
                                                BorderThickness="2"
                                                Background="White"
                                                Style="{Binding editIncomeButton}">
                                        <TextBlock Text="Edit" Foreground="#46FF05"/>
                                    </Button>
                                    <Button Grid.Column="1"
                                               Style="{Binding deleteBtn}"
                                                Background="#D10A0A"
                                                Margin="5">
                                        <TextBlock Text="Delete" Foreground="White"/>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
